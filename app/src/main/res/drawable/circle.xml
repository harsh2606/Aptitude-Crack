<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <!--        <shape android:shape="oval">-->
        <!--            <stroke android:width="2dp" android:color="#000" />-->
        <!--            <size android:width="20dp" android:height="20dp" />-->
        <!--            <solid android:color="@android:color/transparent" />-->
        <!--        </shape>-->

        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">

                <shape android:shape="oval">

                    <stroke android:width="2dp" android:color="#000" />
                    <size android:width="20dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <solid android:width="1dp" android:color="@android:color/transparent" />
                    <size android:width="7dp" android:height="7dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">

                <shape android:shape="oval">

                    <stroke android:width="2dp" android:color="@color/right" />
                    <size android:width="20dp" android:height="20dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <solid android:width="1dp" android:color="@color/right" />
                    <size android:width="7dp" android:height="7dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>