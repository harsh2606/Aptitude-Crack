<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/backimg"
            android:tint="#fff"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/backimg"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/sharesnap">

            <TextView
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Result"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/gothammedium"/>

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r"
                android:fontFamily="@font/gothammedium"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/sharesnap"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/lens"
            android:tint="#fff" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/snap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:id="@+id/lin"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_centerInParent="true"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Difficulty"
                                    android:textSize="14dp"
                                    android:id="@+id/Difficulty"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/gothammedium"></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Easy"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/Difficulty"
                                    android:id="@+id/test"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Time"
                                    android:textSize="14dp"
                                    android:id="@+id/time"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="00:10"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/time"
                                    android:id="@+id/ct"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_centerInParent="true"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Question"
                                    android:textSize="14dp"
                                    android:id="@+id/que"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="10"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/que"
                                    android:id="@+id/txttotal"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/gothammedium"
                                    ></TextView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Attempted"
                                    android:textSize="14dp"
                                    android:id="@+id/Attempted"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="5"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/Attempted"
                                    android:id="@+id/aq"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/lin"
                android:orientation="horizontal"
                android:id="@+id/lin1"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_centerInParent="true"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Right"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/gothammedium"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="5"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/right"
                                    android:id="@+id/ri"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Wrong"
                                    android:textSize="14dp"
                                    android:id="@+id/wrong"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="5"
                                    android:textSize="14dp"
                                    android:layout_below="@+id/wrong"
                                    android:id="@+id/wr"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background4">

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:text="Marks"
                                    android:textSize="14dp"
                                    android:id="@+id/mark"
                                    android:fontFamily="@font/gothammedium"
                                    android:textAlignment="center"
                                    ></TextView>



                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothammedium"
                                    android:text="-5"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="25dp"></TextView>



                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:id="@+id/cwqd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_below="@+id/lin1"
                android:layout_above="@+id/btn"
                android:background="@drawable/corners"
                app:cardCornerRadius="5dp">


            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_above="@+id/btn"
                android:layout_below="@+id/lin1"
                android:layout_centerInParent="true" />
            </androidx.cardview.widget.CardView>


            <RelativeLayout

                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/txtans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/answer_press_unpress">
                    </ImageView>
                    <ImageView
                        android:id="@+id/txtres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/result_press_unpress">

                    </ImageView>
                    <ImageView
                        android:id="@+id/fi"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/exit_press_unpress">

                    </ImageView>


                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>